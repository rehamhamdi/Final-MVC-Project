@model List<Enrollment>

<a asp-controller="Enrollment" asp-action="AddNew" method="get" class="btn btn-primary">Click to Add New Enrollment</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Student Id</th>
            <th scope="col">Coursse Id</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach(var e in Model)
            {
             <tr>
                <td>@e.Id</td>
                <td>@e.StudentId</td>
                <td>@e.CourseId</td>
                <td>
                    <a asp-action="Details" asp-controller="Enrollment" asp-route-id=@e.Id class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Enrollment" asp-route-id=@e.Id class="btn btn-outline-info">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Enrollment" asp-route-id=@e.Id class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Enrollment?');">Delete</a>
                </td>
            </tr>
            }    
        </tr>
    </tbody>
</table>
