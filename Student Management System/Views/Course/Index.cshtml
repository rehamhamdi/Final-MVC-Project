@model List<Course>

<a asp-controller="Course" asp-action="AddNew" class="btn btn-primary">Click to Add New Course</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Credit Hours</th>
            <th scope="col">Instructor Id</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var c in Model)
            {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.CreditsHours</td>
                <td>@c.InstructorId</td>
                <td>
                    <a asp-action="Details" asp-controller="Course" asp-route-id=@c.Id class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Course" asp-route-id=@c.Id class="btn btn-outline-info">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Course" asp-route-id=@c.Id class="btn btn-danger" onclick="return confirm('Are you sure you want to delete Course @c.Name?');">Delete</a>
                </td>
            </tr>
        }
        </tr>
    </tbody>
</table>
