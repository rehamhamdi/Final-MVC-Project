<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Scholar - Online School</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-scholar.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet"href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/> 
  </head>

<body>

  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                 <!-- ***** Serach Start ***** -->
                    @* <div class="search-input">
                      <form id="search" action="#">
                        <input type="text" placeholder="Type Something" id='searchText' name="searchKeyword" onkeypress="handle" />
                        <i class="fa fa-search"></i>
                      </form>
                    </div> *@
                    <!-- ***** Serach Start ***** -->
                    <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a asp-controller="Home" asp-action="index" class="active">Home</a></li>
                            <li class="scroll-to-section"><a asp-controller="Student" asp-action="index">Students</a></li>
                            <li class="scroll-to-section"><a asp-controller="Course" asp-action="index">Courses</a></li>
                            <li class="scroll-to-section"><a asp-controller="Department" asp-action="index">Departments</a></li>
                            @* <li class="scroll-to-section"><a asp-controller="Enrollment" asp-action="index">Enrollments</a></li> *@
                            <li class="scroll-to-section"><a asp-controller="Instructor" asp-action="index">Instructors</a></li>
                            <li class="scroll-to-section"><a asp-controller="OfficeAssignment" asp-action="index">OfficeAssignments</a></li>
                            <li class="scroll-to-section"><a asp-controller="Attendance" asp-action="index">Attendances</a></li>
                            @if(User.Identity.IsAuthenticated)
                            {
                                <li class="scroll-to-section"><a asp-controller="Account" asp-action="signout">Log Out</a></li>
                            }
                            else
                            {

                                <li class="scroll-to-section"><a asp-controller="Account" asp-action="Register">Sign Up</a></li>
                                <li class="scroll-to-section"><a asp-controller="Account" asp-action="Login">Log In</a></li>
                            }

                        </ul>
                        <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->
   
