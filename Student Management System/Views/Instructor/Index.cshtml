@model List<Instructor>

<a asp-controller="Instructor" asp-action="AddNew" class="btn btn-primary">Click to Add New Instructor</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Hire Date</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var i in Model)
            {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.HireDate</td>
                
                <td>
                    <a asp-action="Edit" asp-controller="Instructor" asp-route-id=@i.Id class="btn btn-outline-info">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Instructor" asp-route-id=@i.Id class="btn btn-danger" onclick="return confirm('Are you sure you want to delete Instructor @i.Name?');">Delete</a>
                </td>
            </tr>
        }
        </tr>
    </tbody>
</table>
