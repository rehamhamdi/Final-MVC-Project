@{
    ViewData["Title"] = "Home Page";
    Layout = "_MyLayout";
}

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <p class="lead" style="font-size: 20px; margin-bottom: 30px; color: #555;">
            Welcome to your all-in-one academic management hub!
        </p>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 25px; max-width: 1000px; margin: 0 auto;">
            <a asp-controller="Student" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                📚 Students
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">View and update student records with ease.</p>
            </a>

            <a asp-controller="Course" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                📖 Courses
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">Plan and structure your courses efficiently.</p>
            </a>

            <a asp-controller="Department" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                🏛 Departments
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">Organize and maintain academic departments.</p>
            </a>

            <a asp-controller="Instructor" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                👩‍🏫 Instructors
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">Assign and manage instructors effortlessly.</p>
            </a>

            <a asp-controller="Attendance" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                📅 Attendance
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">Track attendance to keep learning on schedule.</p>
            </a>

            <a asp-controller="OfficeAssignment" asp-action="Index" style="display: block; background-color: #f8f9fa; color: #2c3e50; padding: 25px; border-radius: 15px; text-decoration: none; font-size: 20px; font-weight: bold; border: 1px solid #ddd; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
                🏢 Office Assignments
                <p style="font-size: 16px; font-weight: normal; margin-top: 10px; color: #555;">Manage office locations and assignments for instructors.</p>
            </a>
        </div>

        <p class="mt-4" style="font-size: 18px; color: #555;">
            Manage everything seamlessly — anytime, anywhere.
        </p>
    }
    else
    {
        <h1 class="display-4 mb-2" style="font-size: 40px; font-weight: bold; color: #2c3e50;">
            Welcome To Scholar Platform
        </h1>
        <h2 class="display-5 mb-4" style="font-size: 28px; font-weight: 500; color: #34495e;">
            Student Management System
        </h2>
        <div style="margin-top: 30px; display: flex; gap: 20px; justify-content: center;">
            <a asp-controller="Account" asp-action="Register"
               class="btn btn-lg"
               style="background-color: #6a5acd; color: white; padding: 12px 30px; border-radius: 8px; text-decoration: none; font-size: 18px;">
                Sign Up
            </a>
            <a asp-controller="Account" asp-action="Login"
               class="btn btn-lg"
               style="background-color: #9370db; color: white; padding: 12px 30px; border-radius: 8px; text-decoration: none; font-size: 18px;">
                Log In
            </a>
        </div>
    }
</div>
